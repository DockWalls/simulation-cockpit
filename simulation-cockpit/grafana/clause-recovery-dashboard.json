{
  "dashboard": {
    "id": null,
    "uid": "clause-recovery",
    "title": "Clause Recovery Dashboard",
    "tags": ["simulation", "recovery", "retry"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "type": "graph",
        "title": "Clause Retry Timeline",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "retry_events_total{status=\"triggered\"}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "legend": {
          "show": true,
          "values": true
        }
      },
      {
        "type": "table",
        "title": "Retry Reasons",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "retry_reason",
            "refId": "B"
          }
        ],
        "columns": [
          { "text": "Clause", "value": "clause_id" },
          { "text": "Reason", "value": "retry_reason" },
          { "text": "Attempts", "value": "retry_count" },
          { "text": "Final Status", "value": "recovery_status" }
        ]
      },
      {
        "type": "gauge",
        "title": "Recovery Success Rate",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(retry_success_total) / sum(retry_events_total)",
            "refId": "C"
          }
        ],
        "min": 0,
        "max": 1,
        "thresholds": {
          "steps": [
            { "value": 0.9, "color": "green" },
            { "value": 0.7, "color": "orange" },
            { "value": 0.5, "color": "red" }
          ]
        }
      }
    ]
  }
}
{
  "dashboard": {
    "id": null,
    "uid": "persona-resilience",
    "title": "Persona Resilience Dashboard",
    "tags": ["simulation", "resilience", "persona"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "type": "table",
        "title": "Persona Resilience Index",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "resilience_score{persona=~\".+\"}",
            "refId": "A"
          }
        ],
        "columns": [
          { "text": "Persona", "value": "persona" },
          { "text": "Resilience Score", "value": "resilience_score" },
          { "text": "Recovery Rate", "value": "recovery_rate" },
          { "text": "Confidence Mean", "value": "confidence_mean" },
          { "text": "Alignment Mean", "value": "alignment_mean" }
        ]
      },
      {
        "type": "gauge",
        "title": "Commander-Alpha Resilience",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "resilience_score{persona=\"commander-alpha\"}",
            "refId": "B"
          }
        ],
        "min": 0,
        "max": 1,
        "thresholds": {
          "steps": [
            { "value": 0.9, "color": "green" },
            { "value": 0.7, "color": "orange" },
            { "value": 0.5, "color": "red" }
          ]
        }
      }
    ]
  }
}